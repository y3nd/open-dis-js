{
  "include": ["src", "types"],
  "compileOnSave": false,
  "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/",
      "sourceMap": false,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      //"declaration": true,
      "rootDir": "./src",
      "allowJs": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "module": "ES2022",
      "moduleResolution": "node",
      "importHelpers": true,
      "target": "ES2022",
      "lib": ["ES2022", "DOM"],
      "resolveJsonModule": true
  }
}